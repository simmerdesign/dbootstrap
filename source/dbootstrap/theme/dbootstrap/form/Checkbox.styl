.dbootstrap {

    .dijitCheckBox {
        border: 1px solid $grayLight;
        box-shadow: inset 1px 1px 1px 0 rgba(1, 1, 1, 0.2);
        text-align: center;
        border-radius: 2px;
        padding: 1px;
        background-color: $white;
        position: relative;
    }

    .dijitCheckBox input {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
    }

    .dijitCheckBox:before {
        @extend .dijitIcon:before;
        vertical-align: top;
    }

    .dijitCheckBox.dijitCheckBoxChecked:before {
        @extend .icon-ok:before;
    }

    .dijitCheckBoxDisabled {
        opacity: .65;
        background-color: $grayLightest;
    }
}