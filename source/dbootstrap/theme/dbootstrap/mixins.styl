font-shorthand(size=fontSizeBase, weight=normal, lineHeight=lineHeightBase) {
    font-size: size;
    font-weight: weight;
    line-height: lineHeight;
}

gradientBar(primaryColor, secondaryColor, textColor=#fff, textShadow=0 -1px 0 rgba(0,0,0,.25)) {
    color: textColor;
    text-shadow: textShadow;
    background-color: secondaryColor;
    background-image: linear-gradient(top, primaryColor, secondaryColor);
    background-repeat: repeat-x;
    border-color: secondaryColor secondaryColor darken(secondaryColor, 15%);
    border-color: rgba(0,0,0,.1) rgba(0,0,0,.1) fade-in(rgba(0,0,0,.1), 15%);
}

buttonBackground(startColor, endColor, textColor=#fff, textShadow=0 -1px 0 rgba(0,0,0,.25)) {
    gradientBar(startColor, endColor, textColor, textShadow);
}


clearfix() {
  &:before,
  &:after {
    content: " "; // 1
    display: table; // 2
  }
  &:after {
    clear: both;
  }
}



// Single side border-radii

borderTopRadius(radius) {
    border-top-right-radius: radius;
    border-top-left-radius: radius;
}
borderRightRadius(radius) {
    border-bottom-right-radius: radius;
    border-top-right-radius: radius;
}
borderBottomRadius(radius) {
    border-bottom-right-radius: radius;
    border-bottom-left-radius: radius;
}
borderLeftRadius(radius) {
    border-bottom-left-radius: radius;
    border-top-left-radius: radius;
}


// Drop shadows
boxShadow(shadow) {
  -webkit-box-shadow: shadow; // iOS <4.3 & Android <4.1
          box-shadow: shadow;
}